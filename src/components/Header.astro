---
// src/components/Header.astro
// Using custom GitHub stats component
---

<script is:inline>
  // Format numbers to show 'k' for thousands
  function formatNumber(num) {
    return num > 999 ? (num / 1000).toFixed(1) + 'k' : num;
  }

  // Fetch GitHub stats
  async function fetchGitHubStats() {
    try {
      const response = await fetch('https://api.github.com/repos/RAGEN-AI/RAGEN');
      const data = await response.json();
      
      if (data.stargazers_count !== undefined) {
        document.getElementById('stars-count').textContent = formatNumber(data.stargazers_count);
      }
      
      if (data.forks_count !== undefined) {
        document.getElementById('forks-count').textContent = formatNumber(data.forks_count);
      }
    } catch (error) {
      console.error('Error fetching GitHub stats:', error);
    }
  }

  // Run when page is loaded
  document.addEventListener('DOMContentLoaded', fetchGitHubStats);
</script>

<header>
  <div class="container">
      <a href="#hero" class="info-badge">
          <img src="/icon.png" alt="Icon" class="badge-icon" />
          <span class="badge-text"><strong>RAGEN</strong></span>
      </a>

      <div class="nav-wrapper">
          <nav class="main-nav">
