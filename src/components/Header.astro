<style>
  header {
    background-color: #fff;
    border-bottom: 1px solid #e0e0e0;
    height: var(--header-height, 60px);
    display: flex;
    align-items: center;
    position: sticky;
    top: 0;
    z-index: 10;
  }

  .container {
    max-width: var(--page-max-width, 1100px);
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    justify-content: space-between; /* Logo left, nav-wrapper right */
    align-items: center;
    width: 100%;
  }

  /* Wrapper for right-aligned items */
  .nav-wrapper {
      display: flex;
      align-items: center;
      gap: 1.8rem; /* Adjust gap between nav and GitHub repo */
  }

  /* Main navigation styles */
  .main-nav ul {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      gap: 1.5rem; /* Spacing between nav items */
  }

  .main-nav li {
      display: inline-block;
  }

  .main-nav a {
      text-decoration: none;
      color: #555;
      font-size: 0.95rem;
      font-weight: 500;
      transition: color 0.2s ease;
  }

  .main-nav a:hover,
  .main-nav a:focus {
      color: #2a2f6c;
  }

  /* GitHub repo display styles */
  .github-repo {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      text-decoration: none;
      color: #333;
      padding: 8px 12px;
      border-radius: 6px;
      transition: background-color 0.2s ease;
  }

  .github-repo:hover {
      background-color: rgba(0, 0, 0, 0.05);
  }

  .repo-icon {
      display: flex;
      align-items: center;
      justify-content: center;
      color: #333;
  }

  .repo-info {
      display: flex;
      flex-direction: column;
  }

  .repo-name {
      font-weight: 500;
      font-size: 0.9rem;
      color: #24292f;
      margin-bottom: 3px;
  }

  .repo-stats {
      display: flex;
      gap: 0.4rem;
  }

  .stat-item {
      display: flex;
      align-items: center;
      gap: 3px;
      font-size: 0.75rem;
      color: #57606a;
  }

  /* Logo styles */
  .info-badge {
    display: inline-flex;
    align-items: center;
    padding: 8px 15px;
    background-color: #ffffff;
    border: 1px solid #ced4da;
    border-radius: 20px;
    gap: 8px;
    text-decoration: none;
    color: #212529;
    font-size: 1rem;
    transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease;
  }

  .info-badge:hover {
    background-color: #e9ecef;
    border-color: #e9ecef;
    cursor: pointer;
  }

  .badge-icon {
    height: 24px;
    width: auto;
  }

  .badge-text {
    line-height: 1;
  }
</style>